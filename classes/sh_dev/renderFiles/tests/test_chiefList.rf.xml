<div>
	<div class="chiefList_intro">
		<RENDER_VALUE what="chiefList>intro"/>
	</div>
	<RENDER_TABLE what="chief" cols="2">
		<td class="chief_image">
			<a href="{chief>chiefPage}">
				<img src="{chief>image}" alt="chief_image" title="{chief>name}"/>
			</a>
		</td>
		<td class="chief_content hideLink">
			<a href="{chief>chiefPage}">
				<span>
					<RENDER_VALUE what="chief>description"/>
				</span>
				<RENDER_IFSET what="chiefs>moreInfo">
					<div class="moreInfo"><RENDER_VALUE what="i18n2>moreinfo"/>
					</div>
				</RENDER_IFSET>
			</a>
		</td>
	</RENDER_TABLE>
</div>