<div>
	<div class="sdle_intro">
		<RENDER_VALUE what="general>intro"/>
	</div>
	<RENDER_LOOP what="event">
		<div class="oneEvent">
			<div class="oneEvent_header">
				<span class="oneEvent_date"><RENDER_VALUE what="event>date"/>
				</span>&#160;-&#160;
				<span class="oneEvent_title"><RENDER_VALUE what="event>title"/>
				</span>
			</div>
			<div class="oneEvent_content">
				<RENDER_VALUE what="event>content"/>
			</div>
			<RENDER_IFSET what="schedule>showMail">
				<div class="oneEvent_mail">
					<RENDER_VALUE what="i18n2>schedule_moreInfo"/>&#160;<a href="{contact>mailto}"><RENDER_VALUE what="contact>mailAddress"/></a>
				</div>
			</RENDER_IFSET>
		</div>
	</RENDER_LOOP>
</div>