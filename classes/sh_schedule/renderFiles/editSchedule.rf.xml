<div id="form_box_container">
    <RENDER_FORM id="editSdle" >
		<div class="form_box_container">
			<div class="form_box_top">
				<h3 class="box_title"><RENDER_VALUE what="i18n2>editSdle_title"/></h3>
			</div>
			<div class="form_box_middle">
				<div class="formContent">
					<RENDER_VALUE what="i18n2>pageTitle"/><br />
					<RENDER_I18NINPUT class="sh_content" i18n="{schedule>pageTitle}" name="pageTitle"/>
				</div>
				<div class="formContent">
					<RENDER_VALUE what="i18n2>editSdle_intro"/><br />
					<RENDER_I18NWEDITOR type="minimal" i18nClass="cm_lvdc" i18n="{editSdle>intro}" name="editSdle_intro"/>
				</div>
				<div class="formContent">
				<RENDER_VALUE what="i18n2>showDate"/><br />
				<select>
					<option><RENDER_VALUE what="i18n2>showDateBefore_week"/></option>
					<option><RENDER_VALUE what="i18n2>showDateBefore_month"/></option>
					<option><RENDER_VALUE what="i18n2>showDateBefore_3month"/></option>
					<option><RENDER_VALUE what="i18n2>showDateBefore_6month"/></option>
					<option><RENDER_VALUE what="i18n2>showDateBefore_year"/></option>
				</select>
				</div>
				<div class="formContent">
				<RENDER_VALUE what="i18n2>showDate"/><br />
				<select>
					<option><RENDER_VALUE what="i18n2>showDateAfter_week"/></option>
					<option><RENDER_VALUE what="i18n2>showDateAfter_month"/></option>
					<option><RENDER_VALUE what="i18n2>showDateAfter_3month"/></option>
					<option><RENDER_VALUE what="i18n2>showDateAfter_6month"/></option>
					<option><RENDER_VALUE what="i18n2>showDateAfter_none"/></option>
				</select>
				</div>
			</div>
			<div class="form_box_bottom">
			</div>
			<div class="form_box_top">
				<h3 class="box_title"><RENDER_VALUE what="i18n2>editSdle_listTitle"/></h3>
			</div>
			<div class="form_box_middle">
				<div class="formContent">
					<RENDER_LOOP what="eventList">
						<div class="marginBottom_5px">
							<span class="bold">
								<RENDER_VALUE what="eventList>title"/>&#160;
							</span>
							<a href="{}"><RENDER_VALUE what="i18n2>editLink"/></a>&#160;&#160;
							<a href="{}"><RENDER_VALUE what="i18n2>deleteLink"/></a>
						</div>
					</RENDER_LOOP><br />
				</div>
			</div>
			<div class="form_box_bottom">
			</div>
			<input type="submit" value="{i18n>validate}"/>
		</div>
	</RENDER_FORM>
</div>