<div id="connection_mainContainer">
    <div class="bg_identification_top">
    </div>
    <div class="bg_identification_middle">
        <div id="identificationContainer">
            <RENDER_IFSET what="error>message">
                <div style="color:red"><RENDER_VALUE what="error>message"/></div>
            </RENDER_IFSET>
            <RENDER_FORM id="passwordForgotten">
                <div  id="clientConnection">
                    <div class="clientConnection_title">
                        <RENDER_VALUE what="i18n>passwordForgotten_title"/><br />
                    </div>
                    <div class="id_mdp_text">
                        <RENDER_VALUE what="i18n>passwordForgotten_email"/>
                    </div>
                    <input class="clientConnection_input" name="mail"/>
                </div>
                <div><input class="noBorder" type="image" src="/images/shared/icons/picto_validate.png"/></div>
            </RENDER_FORM>
        </div>
    </div>
    <div class="bg_identification_bottom">
    </div>
</div>